<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/myColor"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <LinearLayout
                android:id="@+id/linearlayour01"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <ImageButton
                    android:id="@+id/imagebutton01"
                    android:layout_height="38dp"
                    android:layout_width="38dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_indicator_prev"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:text="个人信息"
                    >
                </TextView>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_height="30dp"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/list_press"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout01">
        <ImageButton
            android:layout_weight="2"
            android:id="@+id/imagebutton02"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:scaleType="centerInside"
            android:src="@drawable/person_avatar_default_blue"
            android:layout_gravity="center_vertical|left"
            android:gravity="left"
            />

        <LinearLayout
            android:layout_weight="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="Jay Zhao"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/km"
                android:textSize="12sp"
                android:text="累计2000公里"
                />

        </LinearLayout>


        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imagebutton03"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/running_right"
            android:layout_gravity="center_vertical|left"
            android:gravity="left"
            />

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_height="20dp"
        android:layout_width="match_parent"
        />



    <LinearLayout
        android:layout_height="30dp"
        android:layout_width="match_parent"
        />


    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:clickable="true"
        android:background="@drawable/list_press"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="45dp">


        <TextView
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:text="家庭成员"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView

            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imagebutton04"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/running_right"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/list_press"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="45dp">
        <TextView
        android:textColor="#000000"
            android:gravity="center_vertical|left"
            android:text="实验室"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:layout_weight="2"
            android:gravity="center|left"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imagebutton05"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/running_right"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/list_press"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="45dp">
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:text="运动目标"
            android:layout_gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="8000步/天"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imagebutton06"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/running_right"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/list_press"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="45dp">
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:text="体重目标"
            android:layout_gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:text="64.0公斤"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imagebutton07"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/running_right"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/list_press"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="45dp">
        <TextView
            android:textColor="#000000"
            android:gravity="center_vertical|left"
            android:text="单位"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:layout_weight="2"
            android:gravity="center|left"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imagebutton08"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/running_right"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:clickable="true"
        android:background="@drawable/list_press"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="45dp">
        <TextView
            android:textColor="#000000"
            android:gravity="center_vertical|left"
            android:text="关于"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:layout_weight="2"
            android:gravity="center|left"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imagebutton09"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/running_right"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="@color/black"/>


</LinearLayout>