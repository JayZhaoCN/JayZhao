<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/myColor"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <LinearLayout
                android:id="@+id/linearlayour01"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <ImageButton
                    android:id="@+id/back"
                    android:layout_height="38dp"
                    android:layout_width="38dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_indicator_prev"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="单位"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    >
                </TextView>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"></LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="30dp">

        <ImageButton
            android:id="@+id/spaceImage"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="设置长度单位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout01"
        android:clickable="true"
        android:background="@drawable/list_press"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp">

        <ImageButton
            android:src="@drawable/arrow_single_choice"
            android:id="@+id/image01"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="公制（米、公里）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout02"
        android:clickable="true"
        android:background="@drawable/list_press"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp">

        <ImageButton
            android:scaleType="centerInside"
            android:id="@+id/image02"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="英制（英尺、英里）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"></LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="30dp">

        <ImageButton
            android:id="@+id/spaceImage2"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="设置重量单位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout03"
        android:clickable="true"
        android:background="@drawable/list_press"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp">

        <ImageButton
            android:src="@drawable/arrow_single_choice"
            android:id="@+id/image03"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="公制（公斤、千克）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout04"
        android:clickable="true"
        android:background="@drawable/list_press"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp">

        <ImageButton
            android:scaleType="centerInside"
            android:id="@+id/image04"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="英制（磅）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout05"
        android:clickable="true"
        android:background="@drawable/list_press"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp">

        <ImageButton
            android:scaleType="centerInside"
            android:id="@+id/image05"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="市斤（1斤=500克）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





</LinearLayout>