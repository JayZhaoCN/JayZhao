                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="67.0公斤"
                    android:layout_weight="1"
                    android:id="@+id/text10"
                    android:textColor="#000000"
                    android:gravity="center_vertical|right"
